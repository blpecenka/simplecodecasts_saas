<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Upgrade to Pro</h1>
        <p>Upgrade to the Pro Membership for $10 per month and get access to Community members' professional contact information.</p>
    <% else %>
      <h1>Basic Membership</h1>
        <p>Sign up for free and see developers, entrepreneurs, and developers in your area.</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      
      <h3 class="text-center">Take your networking to the next level</h3></br>
      
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>